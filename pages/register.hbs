{{> top}}

<div class="container">
  <div class="row">
    <p style="text-align: center;">First time visiting? You might want to take a look at the <a href="/documents/reg-package.pdf" target="_blank">registration package.</a> Struggling with something? Take a look at our <a href="/faq">FAQ</a></p>
  </div> <!-- row -->

  <div style="padding-left: 25px; padding-right: 25px; padding-top: 25px" class="well col-md-4 pull-right">
    <form method="POST" action="/login" class="form">
      <legend>Log In</legend>
      <p>Already registered? Log in here!</p>
      <div class="form-group">
        <label>Email Address</label>
        <input id="email" type="email" name="email" placeholder="someone@somewhere.ca" autofocus="autofocus" required="required" class="form-control"/>
      </div>
      <div class="form-group">
        <label>Password</label>
        <input type="password" name="password" placeholder="°°°°°°°°" class="form-control"/>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block"><i class="fa fa fa-check"></i> Log In</button>
      </div>
      <p>If you forgot your password, don't worry it's ok. Enter your email above, then click<a id="recover"> here</a></p>
    </form>
  </div> <!-- well col-md-4 pull-right -->

  <form method="POST" action="/register" class="form container">
    <div class="row">
      <div class="col-md-7">
        <h1>Register a New Group</h1>
        <p>Welcome, please fill out your Email and Password above before continuing and completing the information below.</p>
        <p>Please be aware this <b>does not</b> register you (the primary contact) as a group member. You must do that later!</p>
        <p class="text-muted">Fields with a star (*) are required.</p>
        <legend>Login Details</legend>
        <div class="form-group">
          <label class="control-label">Email Address*</label>
          <input id="email" type="email" name="email" placeholder="someone@somewhere.ca" autofocus="autofocus" required="required" class="form-control"/>
        </div>
        <div class="form-group">
          <label>Password*</label>
          <input type="password" name="password" placeholder="My Secret Password" class="form-control"/>
        </div>
        <div class="form-group">
          <label>Password Confirmation*</label>
          <input type="password" name="passwordConfirm" placeholder="My Secret Password" class="form-control"/>
        </div>
      </div> <!-- col-md-7 -->
    </div> <!-- row -->
    <div class="row">
      <div class="col-md-12">
        <fieldset>
          <legend>Group Details</legend>
          <div class="form-group">
            <label>Primary Contact Name*</label>
            <input type="text" name="name" placeholder="Foo Bar" class="form-control"/>
          </div>
          <div class="form-group">
            <label>Affiliation*</label>
            <input type="text" name="affiliation" placeholder="Some Organization" class="form-control"/>
          </div>
          <div class="form-group">
            <label>Street Address*</label>
            <input type="text" name="address" placeholder="123 Fake St." class="form-control"/>
          </div>
          <div class="form-group">
            <label>City*</label>
            <input type="text" name="city" placeholder="Vancouver" class="form-control"/>
          </div>
          <div class="form-group">
            <label>Region*</label>
            <select name="region" class="form-control">
              <option value="">Please choose...</option>
              <option value="North">North</option>
              <option value="Interior">Interior</option>
              <option value="Fraser">Fraser</option>
              <option value="Vancouver Coastal">Vancouver Coastal</option>
              <option value="Vancouver Island">Vancouver Island</option>
              <option value="Out of Province">Out of Province</option>
            </select>
          </div>
          <div class="form-group">
            <label>Province*</label>
            <select name="province" class="form-control">
              <option value="">Please choose...</option>
              <option value="British Columbia">British Columbia</option>
              <option value="Alberta">Alberta</option>
              <option value="Saskatchewan">Saskatchewan</option>
              <option value="Manitoba">Manitoba</option>
              <option value="Ontario">Ontario</option>
              <option value="Quebec">Quebec</option>
              <option value="New Brunswick">New Brunswick</option>
              <option value="Nova Scotia">Nova Scotia</option>
              <option value="Prince Edward Island">Prince Edward Island</option>
              <option value="Newfoundland and Labrador">Newfoundland and Labrador</option>
              <option value="Nunavut">Nunavut</option>
              <option value="Northwest Territories">Northwest Territories</option>
              <option value="Yukon">Yukon</option>
              <option value="Other (Outside Canada)">Other (Outside Canada)</option>
            </select>
          </div>
          <div class="form-group">
            <label>Postal Code*</label>
            <input type="text" name="postalCode" placeholder="A1B 2C3" class="form-control"/>
          </div>
          <div class="form-group">
            <label>Daytime Phone #*</label>
            <input type="text" name="phone" placeholder="(123) 456-7980" class="form-control"/>
          </div>
          <div class="form-group">
            <label>Fax # (Optional)</label>
            <input type="text" name="fax" placeholder="(123) 456-7890" class="form-control"/>
          </div>
          <div class="form-group">
            <label>Group Type*</label>
            <select name="affiliationType" class="form-control">
              <option value="">Please Choose...</option>
              <option value="Friendship Centre">Friendship Centre</option>
              <option value="Off-reserve">Off-reserve</option>
              <option value="On-reserve">On-reserve</option>
              <option value="Other">Other</option>
            </select>
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block"><i class="fa fa fa-check"></i> Register</button>
          </div>
        </fieldset>
      </div> <!-- col-md-12 -->
    </div> <!-- row -->
  </form>
</div> <!-- container -->

<script>
  $('#recover').click(function () {
    var email = $('#email').val();
    $.get("/recover/" + email, function (data) {
      alert(data);
    });
  });
</script>

{{> bottom}}
