doctype 5
html
  head
    title Gathering Our Voices 2014 - Printout
    meta(name="description", content="Gathering Our Voices is an annual conference in BC for Aboriginal Youth. This year it is hosted in Vancouver at the Hyatt Regency and Fairmont Hotel.")

    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")

    // Scripts
    script(src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js")
    script(src="/js/lazy.min.js")
    script(src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js")

    // Resources
    //if lt IE 9
      script(src="/js/html5shiv.min.js")
    // jQuery
    
    // Bootstrap
    link(href="//netdna.bootstrapcdn.com/bootswatch/3.0.0/united/bootstrap.min.css", rel="stylesheet")
    link(href="//netdna.bootstrapcdn.com/font-awesome/4.0.0/css/font-awesome.min.css", rel="stylesheet")
    // Custom
    link(href="/css/styles.css", rel="stylesheet")
  body.container
    h1 Gathering Our Voices 2014
      img.pull-right(src="/img/gov.jpg")
    h2 Information Printout for #{group.affiliation}
    p.lead Primary Contact: #{group.name}
    p Phone: #{group.phone}
    p Email: #{group.email}
    hr
    .col-sm-6
      h2 Membership Counts
      table.table
        thead
          tr
            td
            td Type
            td Early ($125)
            td Regular ($175)
        tbody
          tr
            td
              .label.label-info Y
            td Youth
            td #{group.stats['Youth']['Early']}
            td #{group.stats['Youth']['Regular']}
          tr
            td
              .label.label-success YA
            td Young Adults
            td #{group.stats['Young Adult']['Early']}
            td #{group.stats['Young Adult']['Regular']}
          tr
            td
              .label.label-warning YC
            td Young Chaperones
            td #{group.stats['Young Chaperone']['Early']}
            td #{group.stats['Young Chaperone']['Regular']}
          tr
            td
              .label.label-danger Ch
            td Chaperones
            td #{group.stats['Chaperone']['Early']}
            td #{group.stats['Chaperone']['Regular']}
          tr
            td
            td Unmarked
            td #{group.stats['']['Early']}
            td #{group.stats['']['Regular']}
      if group.stats['youthInCare'] != 0
        p.alert.alert-success Youth In Care Dinner Tickets: #{group.stats['youthInCare']}
      if group.stats['youthInCareSupport'] != 0
        p.alert.alert-success Youth In Care Dinner (Support) Tickets: #{group.stats['youthInCareSupport']}
    .col-sm-6
      h2 Payment History
      table.table
        thead
          tr
            td $CAD
            td Type
            td Number
            td Date
        tbody
          for payment in group._payments
            tr
              td= payment.amount
              td= payment.type
              td= payment.number
              td #{payment.date.day}, #{payment.date.month}, #{payment.date.year}
      h3 Totals
      p Cost: $#{cost}
      p Paid: $#{paid}
      p Balance: $#{cost - paid}