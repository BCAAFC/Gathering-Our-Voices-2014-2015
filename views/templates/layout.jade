  body
    #wrap
      header
        .navbar-wrapper
          .container
            include navbar
        #welcome.carousel.slide
          .carousel-inner
            .item.active(style="background: url(#{head.bg})")
              .container
                .carousel-caption
                  h1= head.title
                  p= head.caption
      main
        if session.message
          .container
              .row
                pre.alert.alert-warning= session.message
        block content
      .container
        .row(style="text-align: center;")
          img(src="/img/funders.jpg")
      footer
        .container
          .row
            .col-sm-4
              h3 Organizers
              .row
                .col-xs-6
                  a(target="_blank", href="http://www.bcaafc.com/")
                    img(src="/img/bcaafc.png")
                .col-xs-6
                  a(target="_blank", href="http://www.vafcs.org/")
                    img(src="/img/vafcs.png")
